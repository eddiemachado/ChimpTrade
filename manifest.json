{
  "name": "ChimpTrade",
  "version": "1.0",
  "description": "A set of tools to help you make the best trades. It's basically a glorified calculator.",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "alarms",
    "storage",
    "notifications",
    "fontSettings"
  ],
  "web_accessible_resources": [{
    "resources": ["src/fonts/*","src/img/*","src/js/*"],
    "matches": [],
    "use_dynamic_url": true
  }],
  "action": {
    "default_popup": "home.html",
    "default_icon": {
      "16": "src/img/16.png",
      "32": "src/img/32.png",
      "48": "src/img/48.png",
      "128": "src/img/128.png"
    }
  },
  "icons": {
    "16": "src/img/16.png",
    "32": "src/img/32.png",
    "48": "src/img/48.png",
    "128": "src/img/128.png"
  }
}
